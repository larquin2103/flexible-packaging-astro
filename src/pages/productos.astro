---
import Layout from '../layouts/Layout.astro'
import Gallery3D from '../components/Gallery3D.jsx'
---

<Layout title="Nuestros Productos" description="Catálogo completo de envases flexibles.">
  <!-- Hero responsive -->
  <section class="py-12 md:py-20 bg-gradient-to-br from-purple-50 to-white text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl md:text-5xl font-bold mb-4">Nuestros Productos</h1>
      <p class="text-gray-700 max-w-3xl mx-auto text-sm md:text-base">
        Explora cada envase, descarga fichas técnicas y solicita muestras gratis.
      </p>
  </section>

  <!-- Galería responsiva -->
  <Gallery3D client:visible />

  <!-- Tabla responsive con scroll horizontal en móvil -->
  <section class="py-12 md:py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl md:text-3xl font-bold text-center mb-8">Especificaciones rápidas</h2>
      <div class="overflow-x-auto">
        <table class="w-full text-sm md:text-base text-left text-gray-700 min-w-[600px]">
          <thead class="text-xs md:text-sm text-gray-900 uppercase bg-gray-100">
            <tr>
              <th scope="col" class="px-4 py-3">Producto</th>
              <th scope="col" class="px-4 py-3">Material</th>
              <th scope="col" class="px-4 py-3">Capacidad</th>
              <th scope="col" class="px-4 py-3">Descarga</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b">
              <td class="px-4 py-3 font-medium">Doypack Personalizados</td>
              <td class="px-4 py-3">PET/ALM/PE</td>
              <td class="px-4 py-3">70 g - 2 kg</td>
              <td class="px-4 py-3"><a href="/fichas/doypack.pdf" class="text-blue-600 hover:underline">PDF</a></td>
            </tr>
            <tr class="border-b">
              <td class="px-4 py-3 font-medium">Tubos Colapsibles</td>
              <td class="px-4 py-3">100% POLIETILENO</td>
              <td class="px-4 py-3">3 g - 5 kg</td>
              <td class="px-4 py-3"><a href="/fichas/tubos.pdf" class="text-blue-600 hover:underline">PDF</a></td>
            </tr>
            <tr class="border-b">
              <td class="px-4 py-3 font-medium">Bolsas para Café</td>
              <td class="px-4 py-3">PET/AL/PE</td>
              <td class="px-4 py-3">135 g - 150 g</td>
              <td class="px-4 py-3"><a href="/fichas/café.pdf" class="text-blue-600 hover:underline">PDF</a></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</Layout>