---
import Layout from '../layouts/Layout.astro'
import Gallery3D from '../components/Gallery3D.jsx'
---

<Layout title="Nuestros Productos" description="Catálogo completo de envases flexibles.">
  <section class="py-20 bg-gradient-to-br from-purple-50 to-white text-center">
    <h1 class="text-5xl font-bold mb-6">Catálogo de Productos</h1>
    <p class="text-xl text-gray-700 max-w-3xl mx-auto mb-10">
      Explora cada envase, descarga fichas técnicas y solicita muestras gratis.
    </p>
  </section>
  <section class="py-16 bg-gradient-to-br from-yellow-50 to-white text-center">
   <h2 class="text-3xl font-bold mb-4">¿Listo para empezar?</h2>
   <p class="text-gray-700 mb-6">Solicita tu cotización sin compromiso y recibe muestras gratis.</p>
   <a href="/#cotizar" class="bg-blue-600 text-white px-6 py-3 rounded-full font-bold hover:bg-blue-700 transition">
     Solicitar Cotización
   </a>
  </section>
  <!-- Galería 3D interactiva -->
  <Gallery3D client:visible />

  <!-- Tabla resumen -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold text-center mb-12">Especificaciones rápidas</h2>
      <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-700">
          <thead class="text-xs text-gray-900 uppercase bg-gray-100">
            <tr>
              <th scope="col" class="px-6 py-3">Producto</th>
              <th scope="col" class="px-6 py-3">Material</th>
              <th scope="col" class="px-6 py-3">Capacidad</th>
              <th scope="col" class="px-6 py-3">Descarga</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b"><td class="px-6 py-4 font-medium">Stand Up Pouch</td><td class="px-6 py-4">PET/PE</td><td class="px-6 py-4">70 g - 2 kg</td><td class="px-6 py-4"><a href="/fichas/standup.pdf" class="text-blue-600 hover:underline">PDF</a></td></tr>
            <tr class="border-b"><td class="px-6 py-4 font-medium">Flat Bottom</td><td class="px-6 py-4">BOPP/PE</td><td class="px-6 py-4">250 g - 5 kg</td><td class="px-6 py-4"><a href="/fichas/flatbottom.pdf" class="text-blue-600 hover:underline">PDF</a></td></tr>
            <tr class="border-b"><td class="px-6 py-4 font-medium">Spout Pouch</td><td class="px-6 py-4">PET/AL/PE</td><td class="px-6 py-4">100 ml - 3 L</td><td class="px-6 py-4"><a href="/fichas/spout.pdf" class="text-blue-600 hover:underline">PDF</a></td></tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</Layout>