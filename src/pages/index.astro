---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/Hero.astro'
import Features from '../components/Features.astro'
import Testimonials from '../components/Testimonials.astro'
import HubspotForm from '../components/HubspotForm.jsx'
import CTA from '../components/CTA.astro'
---
<Layout title="Fábrica de Envases Flexibles" description="Soluciones de empaque personalizadas. Cotiza ya.">
  <Hero />
  <Features />
  <Testimonials />
  <section id="cotizar" class="py-16 bg-gray-50">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold text-center mb-8">Solicita una Cotización</h2>
      <HubspotForm client:visible />
    </div>
  </section>
  <CTA />
</Layout>
